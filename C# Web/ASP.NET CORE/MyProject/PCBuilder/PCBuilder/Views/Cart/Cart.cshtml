<!-- Site wrapper -->
<div class="wrapper">

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Cart</h1>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Cart</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped projects">
                        <thead>
                            <tr>
                                <th style="width: 1%">
                                    #
                                </th>
                                <th style="width: 35%">
                                    Component
                                </th>
                                <th style="width: 30%">
                                    Image
                                </th>
                                <th style="width: 35%">
                                    InStock
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    #
                                </td>
                                <td>
                                    <a>
                                        Nvidia Gforce RTX 3070
                                    </a>
                                    <br />
                                    <small>
                                        16GB
                                    </small>
                                </td>
                                <td>
                                    <img class="cart-image" src="https://gplay.bg/UserFiles/Product/gallery_1/4.png?cache&block&w=1000&h=1000" />
                                </td>
                                <td class="project-state">
                                    <span class="badge badge-success" style="float: left">Available</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="/DetailsComponent/{id}">
                                        <i class="fas fa-folder">
                                        </i>
                                        Details
                                    </a>
                                    <a class="btn btn-info btn-sm" href="/ReplaceComponent/{id}">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Replace
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="/RemoveComponent/{id}">
                                        <i class="fas fa-trash">
                                        </i>
                                        Remove
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->

        </section>
        <!-- /.content -->
    </div>
